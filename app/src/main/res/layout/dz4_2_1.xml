<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/type421"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dz4_2_1">

    <Button
        android:id="@+id/ticketConfirm"
        android:layout_width="289dp"
        android:layout_height="77dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="128dp"
        android:text="Оформить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/close421"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="Назад"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spiner421"
        android:layout_width="266dp"
        android:layout_height="74dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toTopOf="@+id/ticketConfirm"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/fio421"
        android:layout_width="255dp"
        android:layout_height="78dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ФИО"
        app:layout_constraintBottom_toTopOf="@+id/spiner421"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>